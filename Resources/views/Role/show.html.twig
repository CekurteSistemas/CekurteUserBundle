{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Role'|trans %}
{% set subtitle = 'Details'|trans %}

{% block links -%}
    {% embed 'CekurteGeneratorBundle:Action:list.html.twig' with {
        'route'      : 'admin_role'
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:update.html.twig' with {
        'route'             : 'admin_role_edit',
        'identifierKey'     : 'id',
        'identifierValue'   : entity.id,
        'show_label'        : true
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:create.html.twig' with {
        'route'      : 'admin_role_new',
    } only %}
    {% endembed %}
    {% embed 'CekurteGeneratorBundle:Action:delete.html.twig' with {
        'route'             : 'admin_role_delete',
        'identifierKey'     : 'id',
        'identifierValue'   : entity.id,
        'form'              : delete_form,
        'show_label'        : true
    } only %}
    {% endembed %}
{% endblock %}

{% block content -%}
    <div class="table-responsive">
        <table class="table table-hover table-show">
            <tbody>
                <tr>
                    <th>{{ 'Id'|trans }}</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'Description'|trans }}</th>
                    <td>{{ entity.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
